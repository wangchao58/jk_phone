page{background: #fff;}
.discuss-cont{padding: 0 40rpx; width:670rpx;}
.discuss{ background: none;}
.discuss-row{ border-bottom: #eee solid 1rpx;width: 100%; padding:20rpx 0; float: left; line-height: 30rpx;}
.discuss-title{ padding: 30rpx 0; font-size: 28rpx;}
.discuss-head{width: 84rpx; height:84rpx; border-radius:8rpx; float: left; margin-right:16rpx;}
.discuss-txt{ width: 400rpx; padding-top: 6rpx;}
.discuss-name{overflow: hidden;text-overflow: ellipsis; white-space: nowrap;width:400rpx; font-size: 28rpx;}
.discuss-nr{ width: 120rpx; height:84rpx; overflow: hidden; line-height:28rpx; }
.discuss-nr image{ width: 84rpx; height:84rpx; float: right;}
.section { padding-bottom:24rpx; padding: 18rpx 40rpx; /* box-shadow:0px 3px 6px rgba(123,127,149,0.15);*/} 
.section input{ height:64rpx; background: #F6F6F6; border-radius:36rpx; float: left; width:450rpx; padding: 0 40rpx; font-size: 28rpx;}
.section image{width: 44rpx; height: 44rpx; float: right; margin-top:10rpx; }
.search-box{height:100rpx;position: fixed; bottom:0;left: 0; background: #fff; z-index: 999; width: 100%;}
.submit-btn{float: right; color: #fff;border-radius:36rpx; width:120rpx; font-size:28rpx; background:#66AFFF; text-align: center;height:64rpx; line-height: 64rpx;}
