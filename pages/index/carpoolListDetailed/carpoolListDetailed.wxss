/* pages/index/carpoolListDetailed/carpoolListDetailed.wxss */
 
.detailed,.hd-cont{ width: 670rpx; padding: 0 40rpx;}
 
.detailed-head{ width: 100%; padding:25rpx 0; float: left;}
 
.head-img{width:60rpx; height:60rpx; float: left; border-radius: 10rpx; margin-right:20rpx;}
 
.detailed-title{ width: 100%; height: 90rpx; line-height: 90rpx; font-size:28rpx; text-indent: 40rpx; color: #999;}
 
.hd-data{margin:0 40rpx; width: 670rpx; font-size: 28rpx;padding: 30rpx 0; line-height: 40rpx; color: #666; position: relative;}
 
.hd-data-bt{  float: left; text-align: right; padding-right: 28rpx; min-width: 112rpx; }
 
.hd-data .left{ width: 500rpx;}
 
.hd-cont-bt{ padding: 30rpx 0;}
 
.hd-txt{ text-align:justify; line-height: 44rpx; padding: 20rpx 0;}
 
.join{height: 100rpx; line-height: 100rpx; width: 100%; color: #fff; background: #66AFFF; text-align: center; font-size: 32rpx; position: fixed; left: 0; bottom: 0;}
 
.phone-ico{width: 44rpx; height: 44rpx; position:absolute; right: 40rpx; top:25rpx;}
 
button{width: 50rpx; height: 50rpx; position: relative; background: #fff;}
 
button::after{border: none;}
 
button image{width: 50rpx; height: 50rpx;position: absolute; left: 0;}