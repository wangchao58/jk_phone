<!--pages/index/activity/activity.wxml-->
<view class="container search-box">
     <view class="section w100">
          <input placeholder="请输入搜索内容" />
          <image src='../../images/search_icon.png'></image>
    </view>
</view>
<view class="container">
  <view class="swiper">
  <swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="{{item}}">
    <swiper-item>
        <image src="{{item}}" class="slide-image" style='width:100%;height:300rpx' />
    </swiper-item>
  </block>
  </swiper>
  </view>
</view>

<view class="container mt20" bindtap='detailed' wx:for="{{listShop}}" wx:key="{{item}}" id="{{item.name}}">
    <view class='list-cont'>
         <!-- <image src='../../images/pic_04.png' class='hd-img'></image> -->
         <image src='{{item.tImg}}' class='hd-img'></image>
         <view class='list-title'>{{item.tHeadline}}</view>
         <view class='list-data'>
            <view class='left'><text class='cor-red'>¥{{item.tMoney}}</text>起</view>
            <view class='right'>{{item.tSite}}</view>
            <view class='right mr20'>{{item.tSite}}</view>
         </view>
  </view>
</view>
