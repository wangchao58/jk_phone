/* pages/index/carpool/carpool.wxss */
.section{padding: 0 40rpx; width:670rpx;}
.section { padding-bottom:24rpx; padding-top: 10rpx; position: fixed; top:0;left: 0; background: #fff; z-index: 999;/* box-shadow:0px 3px 6px rgba(123,127,149,0.15);*/} 
.section input{ height:64rpx; background: #F6F6F6; border-radius:36rpx; float: left; width:520rpx; padding: 0 40rpx; font-size: 28rpx;}
.section image{width: 44rpx; height: 44rpx; float: right; margin-top:10rpx; }
.search-box{height:98rpx;}
.swiper{width:100%;}
swiper{ height: 300rpx;}
.distance{ width: 600rpx; padding:40rpx 75rpx; position: relative;}
.distance-row{width: 100%;}
.distance-row input{border-bottom: #eee solid 1px; height: 99rpx; line-height: 99rpx; width: 460rpx; font-size: 36rpx;}
.cor-green,.cor-red{border-radius: 50%; width: 20rpx; height: 20rpx; float: left; margin: 40rpx 30rpx 0 0;}
.cor-green{background:#0FC56E;}
.cor-red{background:#F03737; }
.distance image{position: absolute; right: 60rpx; top:110rpx; width: 50rpx; height: 50rpx;}
.distance-btn,.group-more{ background:#66AFFF; color: #fff; font-size: 36rpx; width: 100%; text-align: center; height: 90rpx; line-height: 90rpx; border-radius: 10rpx; margin-top: 50rpx;}
.group-list{padding: 0 75rpx; width:600rpx;}
.group-title{border-bottom: #ddd solid 1px; height:20rpx; width: 400rpx;   margin:50rpx auto 0;}
.group-title-txt{ height: 32rpx; background: #fff; font-size: 32rpx; width: 200rpx; text-align: center; margin: 0 100rpx;}
.group-row{border-bottom: #eee solid 1px; width: 100%; height:80rpx; line-height:80rpx; float: left; padding:15px 0;}
.group-row image{height: 80rpx; width: 80rpx; float: left; margin-right: 30rpx;}
.group-clear{ width: 100%; clear: both; height:80rpx;}