/* pages/index/information/information.wxss */
.list-cont,.section{padding: 0 40rpx; width:670rpx;}
.list-top{height: 100rpx; line-height: 100rpx;}
.list-top image{width: 60rpx; height: 60rpx; margin: 10px 10px 10px 0; float: left; border-radius: 5rpx;}
.list-txt{color: #666; line-height: 36rpx; font-size: 26rpx;}
.list-img{ margin-top: 20rpx;}
.list-img image{width:200rpx; height:200rpx; margin-right:10px; float: left;}
.list-num{ color: #666; margin-top: 20rpx; line-height: 30rpx;}
.list-num .right,.list-num .left{position: relative; padding-left: 40rpx;}
.list-num image{width: 30rpx; height: 30rpx; position:absolute; left: 0;}
.list-num .mr30 image{top:-3rpx;}
.list-bom{ padding-bottom: 40rpx; float: left;}
.section { padding-bottom:24rpx; padding-top: 10rpx; position: fixed; top:0;left: 0; background: #fff; z-index: 999;/* box-shadow:0px 3px 6px rgba(123,127,149,0.15);*/} 
.section input{ height:64rpx; background: #F6F6F6; border-radius:36rpx; float: left; width:520rpx; padding: 0 40rpx; font-size: 28rpx;}
.section image{width: 44rpx; height: 44rpx; float: right; margin-top:10rpx; }
.search-box{height:72rpx;}