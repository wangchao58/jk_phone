<view class="container pb30">
     <image src='../../images/002.jpg' style='width:100%;height:360rpx;'></image>
     <view class="hd-title">
     {{data.tStoreName}}
     </view>
     <view class="hd-label">
          <view class="right"><image src="../../images/index-ico08.png" ></image>{{data.tCollectionNum}}</view>
          <view class="right mr30"><image src="../../images/index-ico07.png" ></image>{{data.tViewsNum}}</view>
     </view>
</view>
<view class="container">
   <view class='hd-data borderTop'  bindtap='analyze' data-address='{{data.tSite}}' data-name='{{data.tStoreName}}' >
        <image src="../../images/shops-ico02.png" class='addressIco'></image>
        <view class='left'>{{data.tSite}}</view>
   </view>
</view>
<view class="container mt20">
   <view class='hd-cont'>
          <view class='w100 borderBom cor-bock center fontSize36 hd-cont-bt'>商铺简介</view>
          <view class='w100 cor-grey fontSize28 hd-txt'>{{data.tExplain}}</view>
   </view>
</view>
<view class="container mt20" style='height:100rpx; background-color:#F7F7F7;'></view>
<view class="bottomBox">
     <view class='left'></view>
     <view class='bottomIco'><image src='../../images/bottom-ico01.png'></image>首页</view>
     <view class='bottomIco'><image src='../../images/bottom-ico02.png'></image>收藏</view>
     <view class='bottomIco'><image src='../../images/bottom-ico03.png'></image>分享</view>
     <view class='bottomBtn' data-phone="{{data.tPhone}}" bindtap='callPhone'>立即联系</view>
</view>

