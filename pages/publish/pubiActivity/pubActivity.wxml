<view class="details borderTop">
      <view class='chooseImage' bindtap='chooseImage'>
            <view class='chooseImage-txt'>上传封面</view>
            <image src='' class='banner-img' hidden='{{imgShow}}'></image>
       </view>
       <view class="section mt20">
         <view class='section-label'>活动名称</view>
         <input placeholder="请输入活动名称" />
      </view>
    <view class="section">
        <view class='section-label'>开始时间</view>
          <picker mode="date" value="{{startdate}}" start="2015-09-01"  end="2017-09-01" bindchange="startDateChange" > <view class="picker">{{startdate}}</view> </picker>
          <view class="picker-line">-</view>
        <picker mode="time" value="{{starttime}}" start="09:01" end="21:01" bindchange="startTimeChange" ><view class="picker">{{starttime}}</view></picker>
    </view>
    <view class="section">
         <view class='section-label'>结束时间</view>
          <picker mode="date" value="{{enddate}}" start="2015-09-01"  end="2017-09-01" bindchange="endDateChange" > <view class="picker">{{enddate}}</view> </picker>
          <view class="picker-line">-</view>
        <picker mode="time" value="{{endtime}}" start="09:01" end="21:01" bindchange="endTimeChange" ><view class="picker">{{endtime}}</view></picker>
    </view>
    <view class="section">
         <view class='section-label'>活动地点</view>
          <input placeholder="请输入活动地点" />
    </view>
    <view class="section">
         <view class='section-label'>发布者</view>
          <input placeholder="请输入群所在地" />
    </view>
    <view class="section">
         <view class='section-label'>手机号</view>
          <input placeholder="请输入手机号码" />
    </view>
    <view class="section">
         <view class='section-label'>微信号</view>
          <input placeholder="请输入微信号码" />
    </view>
    <view class="section borderN">
         <view class='section-label'>活动详情</view>
         <textarea  placeholder="请输入活动详情" />
     </view>
  <view class="clear"></view>
</view>
<view class="time-bottom"  bindtap='informationSub'>发布</view>
<view class='w100' style="height:100rpx;"></view>



