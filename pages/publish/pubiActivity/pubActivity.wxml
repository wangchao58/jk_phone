<view class="details borderTop">
      <view class='chooseImage' bindtap='chooseImage'>
            <view class='chooseImage-txt'>上传封面</view>
            <image src='' class='banner-img' hidden='{{imgShow}}'></image>
      </view>
      <view class="section mt20">
         <view class='section-label'>活动名称</view>
         <input placeholder="请输入活动名称" />
    </view>
    <view class="section">
         <view class='section-label'>举办时间</view>
          <input placeholder="请输入活动日期" />
    </view>
    <view class="section">
         <view class='section-label'>活动地点</view>
          <input placeholder="请输入活动地点" />
    </view>
    <view class="section">
         <view class='section-label'>发布者</view>
          <input placeholder="请输入群所在地" />
    </view>
    <view class="section">
         <view class='section-label'>手机号</view>
          <input placeholder="请输入手机号码" />
    </view>
    <view class="section">
         <view class='section-label'>微信号</view>
          <input placeholder="请输入微信号码" />
    </view>
    <view class="section borderN">
         <view class='section-label'>活动详情</view>
         <textarea  placeholder="请输入活动详情" />
     </view>
  <view class="clear"></view>
</view>
<view class="time-bottom"  bindtap='informationSub'>发布</view>
<view class='w100' style="height:100rpx;"></view>



